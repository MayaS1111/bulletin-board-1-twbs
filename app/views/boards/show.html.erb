<div style="padding: 0px 10px">
  <div>
    <div class="col-md-12 d-flex ">
      <h1><%= @the_board.name %></h1>
      <%# Modal button %>
      <button type="button" class="ms-auto btn btn-sm btn-outline-success" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Add a new post
      </button>
    </div>
  </div>



  <form action="/insert_post" method="post">
    <%# Modal %>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">New board</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            
              <div class="md-3">
                <form action="/insert_board" method="post">
                <div>
                  <label for="title_box">Title</label>
                  <input type="text" id="title_box" name="query_title">
                </div>
                <div>
                  <label for="body_box"> Body</label>
                  <textarea id="body_box" name="query_body" rows="3"></textarea>
                </div>
                <div>
                  <label for="expires_on_box"> Expires on</label>
                  <input type="date" id="expires_on_box" name="query_expires_on">
                </div>
              </div>
              <div class="d-grid">
                <button type="button" class="btn btn-success">Add post</button>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          </div>
        </div>
      </div>
    </div>
  </form>

  <nav>
    <div class="nav nav-tabs nav-fill mb-3" id="nav-tab" role="tablist">
      <button class="nav-link active" id="nav-active-posts-tab" data-bs-toggle="tab" data-bs-target="#nav-active-posts" type="button" role="tab" aria-controls="nav-active-posts" aria-selected="true">Active posts(<%=@active_posts.size%>)</button>
      <button class="nav-link" id="nav-expired-posts-tab" data-bs-toggle="tab" data-bs-target="#nav-expired-posts" type="button" role="tab" aria-controls="nav-expired posts" aria-selected="false">Expired posts(<%=@expired_posts.size%>)</button>
    </div>
  </nav>
  <div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-active-posts" role="tabpanel" aria-labelledby="nav-active-posts-tab" tabindex="0">
      <div class="row row-cols-1 row-cols-md-4 g-4">
        <% @active_posts.each do |a_post| %>
        <div class="col">
          <div class="card mb-3">
            <div class="card-header bg-transparent ">
              <h6><%= a_post.title %></h6>
              <div><%= a_post.expires_on.strftime("%b %e, %Y") %></div>
            </div>
            <div class="card-body ">
              <p class="card-text"><%= a_post.body %></p>
            </div>
            <div class="card-footer bg-transparent"><%= a_post.created_at.strftime("%b %e, %Y") %></div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <div class="tab-pane fade" id="nav-expired-posts" role="tabpanel" aria-labelledby="nav-expired-posts-tab" tabindex="0">
      <div class="row row-cols-1 row-cols-md-4 g-4">
        <% @expired_posts.each do |a_post| %>
        <div class="col">
          <div class="card mb-3">
            <div class="card-header bg-transparent ">
              <h6><%= a_post.title %></h6>
              <div><%= a_post.expires_on.strftime("%b %e, %Y") %></div>
            </div>
            <div class="card-body ">
              <p class="card-text"><%= a_post.body %></p>
            </div>
            <div class="card-footer bg-transparent"><%= a_post.created_at.strftime("%b %e, %Y") %></div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
