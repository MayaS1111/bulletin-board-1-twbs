<div>
  <div>
    <h1>
      <%= @the_board.name %>
    </h1>
  </div>
</div>

<hr>

<h2>
  Add a new post
</h2>

<form action="/insert_post" method="post">
  <div>
    <label for="title_box">
      Title
    </label>

    <input type="text" id="title_box" name="query_title">
  </div>

  <div>
    <label for="body_box">
      Body
    </label>

    <textarea id="body_box" name="query_body" rows="3"></textarea>
  </div>

  <div>
    <label for="expires_on_box">
      Expires on
    </label>

    <input type="date" id="expires_on_box" name="query_expires_on">
  </div>

  <input type="hidden" id="board_id_box" name="query_board_id" value="<%= @the_board.id %>">

  <button>
    Add post
  </button>
</form>

<hr>

<h2>Active posts</h2>

<table border="1">
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Posted on</th>
    <th>Expires on</th>
  </tr>

  <% @active_posts.each do |a_post| %>
    <tr>
      <td><%= a_post.title %></td>
      <td><%= a_post.body %></td>
      <td><%= a_post.created_at.strftime("%b %e, %Y") %></td>
      <td><%= a_post.expires_on.strftime("%b %e, %Y") %></td>
    </tr>
  <% end %>
</table>

<h2>Expired posts</h2>

<table border="1">
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Posted on</th>
    <th>Expired on</th>
  </tr>

  <% @expired_posts.each do |a_post| %>
    <tr>
      <td><%= a_post.title %></td>
      <td><%= a_post.body %></td>
      <td><%= a_post.created_at.strftime("%b %e, %Y") %></td>
      <td><%= a_post.expires_on.strftime("%b %e, %Y") %></td>
    </tr>
  <% end %>
</table>


<nav>
  <div class="nav nav-tabs nav-fill mb-3" id="nav-tab" role="tablist">
    <button class="nav-link active" id="nav-active-posts-tab" data-bs-toggle="tab" data-bs-target="#nav-active-posts" type="button" role="tab" aria-controls="nav-active-posts" aria-selected="true">Active posts()</button>
    <button class="nav-link" id="nav-expired posts-tab" data-bs-toggle="tab" data-bs-target="#nav-expired posts" type="button" role="tab" aria-controls="nav-expired posts" aria-selected="false">Expired posts()</button>
  </div>
</nav>
<div class="tab-content" id="nav-tabContent">
  <div class="tab-pane fade show active" id="nav-active-posts" role="tabpanel" aria-labelledby="nav-active-posts-tab" tabindex="0">
     <div class="row row-cols-1 row-cols-md-4 g-4">
      <% @active_posts.each do |a_post| %>
      <div class="col">
        <div class="card mb-3">
          <div class="card-header bg-transparent ">
            <h6><%= a_post.title %></h6>
            <div><%= a_post.expires_on.strftime("%b %e, %Y") %></div>
          </div>
          <div class="card-body ">
            <p class="card-text"><%= a_post.body %></p>
          </div>
          <div class="card-footer bg-transparent"><%= a_post.created_at.strftime("%b %e, %Y") %></div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="tab-pane fade" id="nav-expired posts" role="tabpanel" aria-labelledby="nav-expired posts-tab" tabindex="0">
    <div class="row row-cols-1 row-cols-md-4 g-4">
      <% @expired_posts.each do |a_post| %>
      <div class="col">
        <div class="card mb-3">
          <div class="card-header bg-transparent ">
            <h6><%= a_post.title %></h6>
            <div><%= a_post.expires_on.strftime("%b %e, %Y") %></div>
          </div>
          <div class="card-body ">
            <p class="card-text"><%= a_post.body %></p>
          </div>
          <div class="card-footer bg-transparent"><%= a_post.created_at.strftime("%b %e, %Y") %></div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
